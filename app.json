{
  "expo": {
    "name": "farmaprisa-driver-app",
    "slug": "farmaprisa-driver-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "farmaprisadriverapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.farmaprisa.driverapp",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Necesitamos tu ubicación para mostrar tu posición en el mapa y optimizar las rutas de entrega.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Necesitamos tu ubicación en segundo plano para rastrear las entregas en tiempo real.",
        "NSLocationAlwaysUsageDescription": "Necesitamos tu ubicación en segundo plano para rastrear las entregas en tiempo real."
      },
      "config": {
        "googleMapsApiKey": "AIzaSyDaSPBlZmgl3ipZfIK_z0xdXmkJBGveUJY"
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.farmaprisa.driverapp",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyDaSPBlZmgl3ipZfIK_z0xdXmkJBGveUJY"
        }
      }
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Necesitamos tu ubicación para mostrar tu posición en el mapa y rastrear las entregas.",
          "locationAlwaysPermission": "Necesitamos tu ubicación en segundo plano para rastrear las entregas en tiempo real.",
          "locationWhenInUsePermission": "Necesitamos tu ubicación para mostrar tu posición en el mapa."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}